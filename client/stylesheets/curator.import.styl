.curator-heading
  color primary
  font-weight 400
  margin 30px 0 0
  font-size 32px
  line-height 0.5

.curator-header
  background primary
  padding 10px 15px
  min-height 54px
  h2
    color ll-gray
    margin: 0
    font-size 30px
    font-weight 700

.curator-inbox-articles
  border-right 2px m-gray solid

.curator-inbox-options
  position relative
  color: primary-light
  input
    padding 5px 5px 5px 30px
    border 1px primary-light solid
    border-radius 3px
    background primary
    color l-gray
  .search-icon
    position absolute
    top 10px
    left 10px
    z-index 10
  a
    color primary-light
    position relative
    top 3px
    margin-right 15px
    font-size 20px
    &:hover
      color l-gray

.curator-article-details-header
  .curated-icon
    color positive
    position absolute
    top 12px
    right 20px
    font-size 32px
  &.curated
    background positive
    h2
      color primary
    .curated-icon
      color primary

.curator-inbox-table
  margin-bottom 0
  color primary-light 
  thead
    display none
  tr
    padding-left 7px
    padding-right 7px

.curator-inbox-section-head
  color primary
  background primary-l-light
  height 37px
  font-size 14px
  padding-top 8px
  cursor: pointer
  
.curator-article-details-content
  padding-top 15px

.curator-inbox-table-row
  .curator-inbox-curated-row::before
    content "\f058"
    font-family FontAwesome
    color positive
  td:first-of-type
    width 45px
    text-align right
  td:nth-of-type(-n+2)
    display table-cell !important
    padding-top 8px
    padding-bottom 8px

@media (min-width: 992px)
  .curator-heading
    padding-left 55px
  .curator-inbox-articles
    .curator-header,
    .curator-inbox-section-head
      padding-left 55px