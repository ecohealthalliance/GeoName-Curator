template(name="admins")
  .container-fluid
    +createAccount
    .container.content-block
      if adminUsers.count
        h3 Admins
        ul.list-group
          +each adminUsers
            +adminUser
      if curatorUsers.count
        h3 Curators
        ul.list-group
          +each curatorUsers
            +adminUser
      if defaultUsers.count
        h3 Users
        ul.list-group
          +each defaultUsers
            +adminUser

template(name="adminUser")
  li.list-group-item.clearfix
    .pull-left
      p= name
      p=email
    unless isCurrentUser
      .btn-group.pull-right
        if isCurator
          button.btn.btn-primary.remove-curator
            i.fa.fa-check
            span Curator
        else
          button.btn.btn-default.make-curator
            i.fa.fa-plus
            span Curator
        if isAdmin
          button.btn.btn-primary.remove-admin
            i.fa.fa-check
            span Admin
        else
          button.btn.btn-default.make-admin
            i.fa.fa-plus
            span Admin
