template(name="incidentForm")

  form#add-incident(novalidate)
    .form-group
      label.control-label Article URL
      +articleSelect2(
        selectId="articleSource"
        articles=articles
        selected=incidentData.articleSource)

    .form-group.incident--dates
      ul.tabs.secondary-tabs(role="tablist")
        li(role="presentation" class="{{dayTabClass}}")
          a(href="#singleDate" aria-controls="single Date" role="tab" data-toggle="tab") Single Date
        li(role="presentation" class="{{rangeTabClass}}")
          a(href="#preciseRange" aria-controls="date range" role="tab" data-toggle="tab") Date Range

      .tab-content
        #singleDate.tab-pane(role="tabpanel" class="{{dayTabClass}}")
          #singleDatePicker.inlineRangePicker

        #preciseRange.tab-pane(role="tabpanel" class="{{rangeTabClass}}")
          #rangePicker.inlineRangePicker

    .form-group
      label.control-label Location
      +locationSelect2(
        selectId="incident-location-select2"
        multiple="true"
        selected=incidentData.locations)

    .form-group
      label.control-label Species
      input.form-control(type="text" name="species" value=incidentData.species)

    .form-group
      label.control-label Status
      .container-flex.check-buttons
        .check-button
          input(type="radio" name="status" id="suspected" value="suspected")
          label(for="suspected") Suspected
        .check-button
          input(type="radio" name="status" id="confirmed" value="confirmed")
          label(for="confirmed") Confirmed
        .check-button
          input(type="radio" name="status" id="revoked" value="revoked")
          label(for="revoked") Revoked

    .form-group
      label.control-label Incident Type
      .container-flex.check-buttons
        .check-button
          input(type="radio" name="incidentType" id="cases" value="cases")
          label(for="cases") Cases
        .check-button
          input(type="radio" name="incidentType" id="deaths" value="deaths")
          label(for="deaths") Deaths
        .check-button
          input(type="radio" name="incidentType" id="other" value="other")
          label(for="other") Other

    if showCountForm
      .form-group.space-top--1
        label.control-label #{selectedIncidentType} Count
        input.form-control(
          name="count"
          type="number"
          min="0"
          required value=incidentData.value
          tabindex="0")

    if showOtherForm
      .form-group.space-top--1
        label.control-label Specify Other
        input.form-control(
          name="other"
          type="text"
          required
          value=incidentData.value
          tabindex="0")

    .form-group
      label.control-label Other Information
      .container-flex.other-metadata.check-buttons
        .check-button
          input(type="checkbox" name="travelRelated" id="travelRelated")
          label(for="travelRelated") Travel Related
        .check-button
          input(type="checkbox" name="cumulative" id="cumulative")
          label(for="cumulative") Cumulative
