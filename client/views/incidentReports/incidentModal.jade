template(name="incidentModal")
  .incident-report.modal.fade(role="dialog")
    .modal-dialog
      .modal-content
        .modal-header
          +modalCloseButton
          .modal-header--title
            h4
              if edit
                | Edit
              else
                | Add
              |  Incident Report
        .modal-body
          if edit
            +incidentForm(
              articles=articles
              incident=incident
              edit=true)
          else
            +incidentForm articles=articles

        .modal-footer
          button.btn.btn-default(type="button" data-dismiss="modal") Close
          if add
            button.btn.btn-primary.save-modal-duplicate(type="button") Save then Duplicate
          button.btn.btn-primary.save-modal(type="button") Save
