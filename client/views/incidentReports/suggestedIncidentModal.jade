template(name="suggestedIncidentModal")
  .modal#suggestedIncidentModal(
    role="dialog"
    data-backdrop="false"
    class="off-canvas--#{offCanvasStartPosition}")
    .modal-dialog
      .modal-content
        .modal-header
          +modalCloseButton
          .modal-header--title
            h4 Edit Location
            if hasSuggestedFields
              p.warning Fields marked with the #[i(class='fa fa-magic')] icon are suggestions
        .modal-body
          .annotated-content.snippet.modal-block
            .snippet--title-legend
              label.control-label.featured.container-flex.no-break
                h5 Source Snippet
            .snippet--text=incidentText
          +incidentForm(
            articles=articles
            incident=incident
            edit=true
            confirmation=true
            valid=valid)
        .modal-footer
          button.btn.btn-default(type="button" data-dismiss="modal") Close
          //button.btn.btn-danger.update-all(type="button") Update All Mentions of Geoname
          button.btn.btn-danger.delete-incident(type="button") Delete
          button.btn.btn-primary.btn-wide.save-modal(type="button") Save
