template(name="userEvents")
  .container-fluid-padded.page-heading.container-flex
    h1 Tracked Events
    .page-options.container-flex
      if isInRole "admin"
        button.btn.btn-primary(
          data-toggle="modal"
          data-target="#create-event-modal")
          i.fa.fa-plus-circle
          span Create New Event
      +reactiveTableFilter(
        id="eventFilter"
        label=" "
        class="event-search with-icon no-addon page-options--search")
  .featured-table
    +reactiveTable collection="userEvents" settings=settings

  if isInRole "admin"
    +createEventModal
