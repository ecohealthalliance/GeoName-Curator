footer
  position absolute
  bottom 0
  z-index 100
  width 100%
  border-top 2px solid $secondary
  background white
  height $footer-height
  display flex
  align-items center
  padding 0 2%
  +below(2)
    justify-content center
    flex-direction column
    text-align center
    position static
    height auto
    padding 1em 2%
  .eha
    a
      bg('/images/eha-logo', 280px, 78px, 'svg')
      display block
  .contact-info
    margin-left auto
    font-weight 300
    +below(2)
      float none
      margin-left 0
      margin-top 2em
      padding-left 0
    +between(3,4)
      text-align right
  a
    color $primary
  li
    font-weight 400
  li
  .fa
    color $primary
    vAlign()
    +between(3,4)
      display block
    +below(2)
      display block
      margin-bottom 3px
  .fa
    margin-left 1.75em
    margin-right 1.75em
    font-size .65em
    +below(4)
      display none
