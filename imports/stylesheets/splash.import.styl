.large-logo
  padding-top 15px
  padding-right 15px

.jumbotron
  padding 60px 0 10px 0
  background #FFF
  p
  h4
  .btns
    margin-left 0px
  h1
    margin 0 auto
    bg('/images/eidr-connect-logo', 500px, 236px, 'svg')
    text-indent -9999px
  p,
  span
    margin-top 15px
    font-size 18px
.intro-info
  width 800px
  margin 0 auto
  .container
    padding 0 0 0 80px

.large-logo
  display block
  margin 0 auto

.program
  margin-top 30px
  text-align center
  span
    color #666
  img
    max-width 100%

@media (max-width: 768px)
  .intro-info
    width 100%
    .container
      padding: 0
  .jumbotron
    padding 30px 15px
    h1
      bg('/images/eidr-connect-logo', 250px, 118px, 'svg')
      margin 0 auto
      margin-bottom 20px
