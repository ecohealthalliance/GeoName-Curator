#scatterPlot-toolbar
  margin-top 10px
  margin-bottom -5px
  margin-right 15px
  float right

.scatterPlot-toolbar-button
  padding-top 2px
  padding-bottom 2px
  font-size 12px

.scatterPlot-container
  overflow hidden

.scatterPlot-axis
  font-family sans-serif
  font-size 8px

.scatterPlot-axis path, .scatterPlot-axis line
  fill none
  stroke #000
  shape-rendering crispEdges

.scatterPlot-axis-label
  font-size 12px
  font-weight bold

.scatterPlot-warn
  fill orangered
  font-size 1.5em
  font-weight 200
  text-transform uppercase

.scatterPlot-tooltip
  position absolute
  padding 5px
  background lightsteelblue
  border 0px
  border-radius 8px
  pointer-events none

.scatterPlot-tooltip
  font-size 10px

.grid .tick
  stroke lightgrey
  opacity 0.7

.grid path
  stroke-width 0

.zoomOverlay
  pointer-events all
  fill none

.zoomBand
  fill none
  stroke-width 1px
  stroke red
