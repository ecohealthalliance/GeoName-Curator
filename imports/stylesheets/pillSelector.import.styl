.pill-selector
  display flex
  align-items center
  justify-content flex-start
  margin 0
  padding 0

.pill
.pill-selector li
  margin-right .5em
  border-radius 4px
  background white
  border 1px solid $border-primary
  text-align center
  cursor pointer
  padding 1em 1em
  display block
  color $primary
  font-size .9em
  line-height 1
  +above(2)
    padding-top .5em
    padding-bottom .5em
    font-size 1em
    flex-grow 0
  &:hover
  &:focus
    background $border-primary-light
    border-color $border-primary
    color $primary
    outline 0
    border-color $primary
    box-shadow 0
    &::before
      color alpha(lighten($primary, 20%), 50%)
      content '\f058' // fa-check-circle
  &:last-of-type
    margin-right 0
  &::before
    @extend .font-awesome
    content '\f10c' // fa-circle-o
    padding-right .25em
    color lighten($m-gray, 50%)
  &.active
    color $primary
    background lighten($secondary, 30%)
    border-color $secondary
    &::before
      content '\f058' // fa-check-circle
      color $primary
    &:focus
    &:hover
      border-color $primary
