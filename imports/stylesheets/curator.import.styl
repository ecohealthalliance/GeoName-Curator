$header-BG = $border-primary-light

.curator-heading
  color $primary
  font-weight 400
  margin 30px 0 0
  font-size 32px
  line-height 0.5
  +above(4)
    padding-left 40px

.curator-inbox-header
  padding 0 15px 0 $page-padding
  display flex
  align-items center
  min-height 50px
  max-height 50px
  border-bottom 2px solid $primary
  border-right 2px solid $primary
  h2
    color $primary
    margin 0
    font-size 1.75em
    font-weight 600
    text-transform uppercase
  .controls
    margin-left 1.5em
    margin-right 1.35em

.toggle-source-content
  font-size 1.5em
  color $primary
  cursor pointer
  padding .15em
  margin-top 2px
  &:hover
    color darken(@color, 10%)
  &.active
    color darken($positive, 20%)

.curator-inbox-sources
  .curator-inbox-header
  .curator-inbox-section-head
    background lighten($border-primary-light, 50%)
    &:hover
    &:focus
      i
        transform scale(1.1)
        transition transform 0.1s ease-in-out
    +above(4)
      padding-left $page-padding

.curator-inbox-options
  position relative
  color $primary-light
  display flex
  align-self stretch
  margin-left auto
  .option
    margin-right .75em
    display flex
    align-items center
    align-self stretch
    &:last-child
      margin 0
  .input-wrapper
    align-self center
    transition .3s
    width 260px
    transform translate(0,0)
    .search-icon
      display flex
      align-items center
      font-size 1.2em
      cursor pointer
      transition .1s ease-in-out
    input
      transition .3s
      opacity 1
      border-radius 3px
      border 1px solid $border-primary
      &:focus
        border-color $primary
    &.stagged
      width 35px
      input
        visibility hidden
        opacity 0
      .search-icon
        font-size 1.75em
        color $primary
        &:hover
          color lighten(@color, 50%)
  input
    box-shadow none
    min-width 250px
    border 0
    &:focus
      box-shadow none
      outline 0
  a
    color $primary
    font-size 1.75em
    +below(4)
      display none
    &:hover
      color lighten(@color, 50%)
  .curator-filter-reviewed-icon
  .curator-filter-calendar-icon
    cursor pointer
    &.active
      color $positive

.curator-filter--search-show
  display flex
  align-items center

.curator-inbox-datepicker
  display none
  margin 5px auto 15px
  &.active
    display block
  .inlineRangePicker
    position relative
  .daterangepicker
    display inline-block
    left auto !important
    top 8px !important
    padding 0
    margin 0 0 5px
  .calendar
    margin 0

.curator-inbox-source-list
  .reactive-table-options
    display none

.curator-inbox-section-head
.curator-events-header
  color $primary
  border-top 1px solid darken($border-primary-light, 5%)
  border-bottom 1px solid darken($border-primary-light, 5%)
  &:hover
    border-color $border-primary

.curator-inbox-section-head
  display flex
  align-items center
  justify-content space-around
  min-height 50px
  font-size 1em
  padding .5em 1em
  cursor pointer
  &:hover
    background $header-BG
  &:first-of-type
    border-top 0
  &:last-of-type
    border-bottom-width 2px
  .toggle
    margin-left auto
  .date
    font-size 1.25em
    font-weight 600
  .count
    font-size .9em
    margin-left 1em
    padding-left 1em
    border-left 1px solid $border-primary

.curator-inbox-buttons
  margin-bottom 30px

.curator-source-details
  padding 0

.curator-source-details-header
  position relative
  background none
  overflow hidden
  padding-left 1.5em
  border-right 0
  h2
    color $primary
    flex 1
    max-width 75%
    white-space nowrap
    text-overflow ellipsis
    overflow hidden
    line-height 1.5
    font-size 1.5em
  &.reviewed
    h2
      color darken($positive, 35%)
  .notification
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    z-index 110
    background desaturate(lighten($positive, 20%), 10%)
    display flex
    align-items center
    justify-content center
    height 49px
    overflow hidden
    p
      margin 0
      color $primary-dark
      font-size 1.2em
      font-weight 300
      text-transform uppercase
      letter-spacing .03em
      margin-left 1em
    i
    .confirmation
      color white
    .confirmation
      font-size 6em
    .fa-spin
      color alpha($primary, 30%)
      margin-left .5em
      font-size 1.5em
    .checks
      position relative
  .transition
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    height 10px
    width 10px
    background white
    z-index 120
    transition .3s ease-in-out
    transition-delay .1s
    border-radius 50%
    opacity 0
    &.active
      transition-delay .9s
      opacity 1
      transform scale(100)

.curator-source-details-options
  display flex
  align-self stretch
  align-items center
  margin-left auto
  .btn
    transition .3s
    &.toggle-reviewed
      background lighten($positive, 90%)
      padding .45em 1.75em
      color darken($positive, 40%)
      &:hover
      &:focus
        background darken(@background, 10%)
        color darken(@color, 10%)
    &.reviewed
      min-width 125px
      transition .3s
      background $positive
      border-color darken($positive, 30%)
      color darken($positive, 60%)
      &::before
      &::after
        display none
        vertical-align middle
      &:before
        content '\f0e2'
        margin-right .25em
        font-family FontAwesome
        font-size .9em
      &::after
        content 'Undo'
      &:hover
        background lighten($delete, 99%)
        border-color $delete
        color darken($delete, 10%)
        &::before
        &::after
          display inline-block
        span
          display none

.curator-source-details-content
  a
    cursor pointer
    color $d-gray
  h3
  h4
    font-weight 600
    margin 0
  h3
    color $primary
    font-size 1.25em
  h4
    color $m-gray
    font-size 1.2em
  .reactive-table-navigation
    margin 15px 0

.curator-source-details-copy-wrapper
  position relative
  &::before
  &::after
    content ''
    height 20px
    position absolute
    left 0
    right 0
  &::before
    background linear-gradient(to bottom, white, alpha(white, 0%))
    top 0
  &::after
    background linear-gradient(to bottom, alpha(white, 0%), white)
    bottom 0

.curator-source-details-copy
  max-height 25vh
  padding 1em 10%
  overflow scroll
  white-space pre-wrap
  +above(4)
    padding 1em 15%

.curator-details-articles
  .open-icon
    margin-right 30px

.curator-inbox-table
  border-radius 0
  margin-bottom 0
  color $primary
  max-width calc(100% + 1px)
  width calc(100% + 1px)
  border 0
  border-top 1px solid $border-primary-light
  border-bottom 1px solid $border-primary-light
  thead
    display none
  tr
    padding-left 7px
    padding-right 7px
    position relative
    &:hover
      background-color $border-primary-light
    &:first-of-type
      td
        border 0
    .curator-inbox-curated-row
      &::before
        content "\f058"
        font-family FontAwesome
        color $positive
    td
      border-color $border-primary-light
      &.title
        padding-left 0
      &:first-of-type
        width $page-padding
        text-align right
      &:nth-of-type(-n+2)
        display table-cell !important
        padding-top .5em
        padding-bottom .5em
    &.selected
      background $selected
      cursor default
      &:hover
        background @background
    .details-row
      position relative
      color $border-primary
  .title
    max-width 400px

.curator-events
  margin-bottom 2em
  &:first-child
    .curator-events-header
      border-top 0

.curator-events-table
  margin-bottom 0
  color $primary
  thead
    display none
  tbody
    tr
      td
        display flex
        align-items center
        padding-top 0
        padding-bottom 0
        padding-right 2em
        border-color $border-primary-light
        .event-info
          transition .1s ease-in-out
        &:first-of-type
          padding-left 1.5em
      &:first-of-type
        td
          border-top 0
      &:hover
        background none
      .secondary-actions
        margin-left auto
        display flex
        align-items center
        opacity 0
        transition opacity .2s ease-in-out
        a
          font-size 1.2em
          color $border-primary
          &:hover
          &:focus
            color darken(@color, 30%)
            transform scale(1.3)
            text-decoration none
            outline 0
            box-shadow 0
      &:hover
        .secondary-actions
          opacity 1

.curator-events--options
  margin-left auto
  display flex
  align-items center
  justify-content flex-end
  min-width 50%

.curator-events-collapse
  color $primary
  cursor pointer

.associated-events
  &::before
  .no-events
    padding 1em 2em

.disassociate-event
.associate-event
  padding-top .5em
  padding-bottom .5em
  font-size 1em
  color $primary
  &:hover
  &:focus
    color $primary-dark
    outline 0
    box-shadow 0
    i
      transform scale(1.25)
      transition .1s ease-in-out
  i
    margin-right .5em

.associate-event
  i
    color darken($positive, 5%)
    &:before
      content '\f055'
  &:hover
    i
      color darken($positive, 20%)

.disassociate-event
  i
    color darken($delete, 5%)
    &::before
      content '\f056'
  &:hover
    i
      color darken($delete, 20%)

.suggest-incidents
  font-size .75em
  padding .25em .75em
  margin-right 1em
  background none
  opacity .75
  border-color $border-primary
  color darken($border-primary, 20%)
  &:hover
    opacity 1

#associated-events
  .secondary-actions
    opacity 1
    visibility visible
  tr
    td
      > span
        padding-right 1em

.curator-events-header
  min-height 50px
  padding .5em 2em .5em 1.5em
  display flex
  align-items center
  border-top 1px solid $border-primary
  border-bottom 1px solid $border-primary
  background lighten($border-primary-light, 50%)
  .input-group-addon
    display none
  &.toggleable
    cursor pointer
    &:hover
      background $header-BG
      .curator-events-collapse
        transition transform .1s ease-in-out
        transform scale(1.2)
      h4
        color $primary

#curatorEventsFilter
  position relative
  display block
  &::after
    content '\f002'
    position absolute
    right 1em
    top 50%
    transform translate(0, -50%)
    z-index 10
    font-family FontAwesome
    color $m-gray
  input
    float none
    border-radius 4px
    border-color $border-primary
    box-shadow none
    padding-right 2em


.filter-wrapper
  opacity 1
  transition .3s
  margin-right 1em
  min-width 70%
  &.subtle
    opacity .4

.spacer
  display inline
  border-right 1px solid #ddd
  margin-left 8px
  margin-right 8px
  &.dark
    border-color $border-primary
  &.light
    border-color $border-primary-light

.no-curator-events
  color gray
  text-align center
  i
    font-size 5em
