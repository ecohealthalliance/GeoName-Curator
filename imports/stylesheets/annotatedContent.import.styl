.source-content--wrapper
  position relative
  height 100%
  > div
    padding 1em $page-padding 3em $page-padding

.selectable-content
.annotated-content
  position absolute
  top 0
  left 0
  bottom 0
  right 0
  z-index 1
  padding-bottom 3em
  white-space pre-wrap
  word-wrap break-word
  word-break break-word

.annotated-content
  &
  span
    &::selection
      background transparent
  &:after
    content ''
    display block
    height 3em

.selectable-content
  z-index 2
  color transparent
  &::selection
    color black
    background alpha($selection, 90%)

.annotation-options
  padding 0
  margin 0
  font-size 1.5em
  display flex
  align-items center
  justify-content center
  padding-right .5em
  padding-left .5em
  li
    margin-right 1em
    color desaturate($primary, 10%)
    cursor pointer
    &:last-of-type
      margin-right 0
    &:hover
      transform scale(1.3)
      transform-origin center
      color $primary
      transition .05s
    &:active
      transform scale(.9)
    &.delete
      &:hover
        color $danger
    &.select
      &.selected
      &:hover
        color $primary-dark

.new-incident-from-selection
  position fixed
  z-index $top-layer
  opacity 0
  transform translate(-50%, -15px) scale(0)
  backface-visibility hidden
  transition .1s transform ease-in-out, .1s opacity ease-in-out
  &.active
    opacity 1
    transform translate(-50%, 0) scale(1)
    transform-origin top
    backface-visibility hidden
  button
    padding-left 3em
    padding-right 3em
    .text
      display none
  &.positioned
    position static
    transform translate(0,0) scale(1)
    button
      width 100%
      border-radius 0
      border-left 0
      border-right 0
      display flex
      text-align left
      span
        display inline-block
      .main-action
        font-weight 600
      .text
        max-width 75%
        overflow hidden
        text-overflow ellipsis
        display block
        margin-left auto
        font-style italic
