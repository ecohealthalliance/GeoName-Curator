.check-button
  flex 1
  +above(2)
    flex 0
  label
    font-weight normal
    white-space nowrap

  [type=checkbox]
  [type=radio]
    &:checked
    &:not(:checked)
      position absolute
      left -9999px

    &:not(:checked) + label
    &:checked + label
      @extend .pill
      position relative
      margin-right .5em !important // Override bootstrap
      display flex
      align-items center

    &:checked + label
      &
      &:focus
      &:hover
        color $primary
        background lighten($secondary, 30%)
        border-color $secondary
        &::before
          color $primary
      &::before
        content '\f058' // fa-check-circle
        color $primary
      &:focus
        border-color $primary

  &.small-text
    [type=checkbox]
    [type=radio]
      + label
        font-size .85em
        &::before
          padding-right .35em
