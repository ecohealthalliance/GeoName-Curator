form
  label
    margin-bottom .25em

.input-wrapper
  position relative

input
.form-control
  border-color $border-primary
  box-shadow none
  &.icon-right
    padding-right 2em
  &:focus
    outline 0
    box-shadow none
    border-color $primary !important

.form-group
  margin-bottom 1.75em
  label
    margin-bottom .5em
    text-transform capitalize
    color $primary
