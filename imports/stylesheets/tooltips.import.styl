.tooltip-inner
  max-width 350px

.popover
  z-index 20000
  min-width 300px
  font-size 12px
  .quote-text
    font-style italic

.popover-content
  overflow hidden
  text-overflow ellipsis
  color $d-gray
  font-weight normal
  font-size 14px
  line-height 1.3

.close-popover
  display none
  +below(3)
    display block
    position absolute
    top -5px
    right -5px
    color $d-gray
    font-size 22px

.popover
.tooltip
.tooltip-inner
.popover-content
  +below(3)
    min-width 200px
    max-width 325px

.tooltip-arrow
  +below(3)
    top 0 !important
