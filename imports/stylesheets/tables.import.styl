.table-header
  padding 10px
  margin-bottom 0
  border-radius $tableRadius $tableRadius 0 0
  border 1px solid #CCC

.table > tbody > tr > th
.table > tbody > tr > td
  border-color $border-primary-light

.table
  border 0
  > tbody
    > tr
      &:hover
      &:focus
        background lighten($border-primary-light, 50%)

.table
.reactive-table
  &.static-rows
    tbody
      tr
        cursor default
        background none
  tr
    cursor pointer
    &.tr-details
      cursor default
      background none

.table
  > tbody
    > tr
      td
        border-top 0
        border-bottom 1px solid $border-primary-light
      &.selected
      &.open
        .action
          color $primary
          &.open-down
            &::after
              content '\f13a'
      &:hover
        .action
          &::after
            color $primary
      .action
        min-width 1em
        max-width 1em
        text-align right
        color $border-primary
        padding-right 1.5em
        &:after
          font-family FontAwesome
        &.open-down
          &::after
            content '\f137'
        &.open-right
          &::after
            content '\f105'

  &.featured
    thead
      background $border-primary-light
      > tr
        > th
          border-top 0
          border-bottom 1px solid $border-primary
    > thead
    > tbody
      > tr
        th
        td
          &:first-of-type
          &:last-of-type
            padding-left $page-padding

.featured-table
  .reactive-table-options
    display none
  .reactive-table-navigation
    +above(3)
      padding 0 $page-padding

.reactive-table-navigation
  width calc(100% - 30px)
  margin-right 1em
  margin-left 1em
