.muted-text
  color darken($l-gray, 20%)

.no-results
  margin-top 1em
  padding 0 1em
  text-align center
  font-weight 300
  text-transform uppercase
  @extend .muted-text
  &::before
    icon()
    display block
    content '\f002'
    font-size 350%

.veil
  full-width()
  background alpha(white, 80%)
  z-index 100
