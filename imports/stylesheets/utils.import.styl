.rm-pad
  padding 0

for $num in -2 -1 0 1 2 3 4 5 6
  .space-btm-{$num}
    margin-bottom $num*10px

  .space-top-{$num}
    margin-top $num*10px

.no-margin
  margin 0 !important

.muted-text
  color darken($m-gray, 20%)

.no-results
  margin-top 1em
  padding 0 1em
  text-align center
  font-weight 300
  text-transform uppercase
  @extend .muted-text
  &::before
    icon()
    display block
    content '\f002'
    font-size 350%

.veil
  full-width()
  background alpha(white, 80%)
  z-index $mid-layer

.gradient-bottom
  &::after
    position absolute
    bottom 0
    left 0
    right 0
    content ''
    height 50px
    background white
    z-index $top-layer
    background linear-gradient(to bottom, rgba(255,255,255,0) 0%,rgba(255,255,255,1) 100%)
    pointer-events none
