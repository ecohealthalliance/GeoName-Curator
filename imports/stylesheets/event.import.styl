@import 'event-icons.import'

.event
  padding-left 50px
  padding-right 50px
  .table td:first-child
  td:first-child
    +below(3)
      width 100%

.event-wrap
  margin-bottom 20px

.fact-sheet-wrap
  padding 20px 0 0 0
  background $secondary-light
  padding-bottom 20px

.event-details
  margin 25px 0 35px 0

.event-name-wrap
  display flex
  align-items flex-start
  margin-bottom .25em

.event-name
  margin 0
  font-size 2.25em
  color $highlight
  font-weight 600

.edit-event-details
  margin-left 10px
  cursor pointer
  font-size 1.25em
  color $m-gray
  &:hover
    color $primary

.disease-name
  span
    font-size 1.5em
    color $primary
    &.not-available
      font-size 1em

.summary
  line-height 1.75em

.summary
.disease-name
  .not-available
    color $m-gray
    font-style italic
  .fa
    font-size 95%
  &.shift-up
    margin-top -10px

.delete-confirmation
  text-align center
  padding-top 2em
  padding-bottom 3.5em
  p
    &:first-of-type
      margin .5em 0 .2em 0
      font-size 125%
    &:last-of-type
      font-style italic
      margin-bottom 2em
  i
    color lighten($delete, 20%)
    font-size 5em
  .other-actions
    margin-top 1em
    .btn:first-of-type
      margin-right .5em

.event-head
  .minor
    font-size 20px
    +below(3)
      font-size 1.2em
      margin .3em 0
  h1
    +below(3)
      font-size 20px
  h2
    margin 5px 0 5px 0
    color #666
    font-size 18px
  h3
    font-size 14px
    +below(3)
      font-size 1.1em

.disease
  h3
    display inline-block
    margin 5px 5px 10px 0

.basic-info
  margin-left 40px
  margin-right 40px

.panel-heading
  background lightslategrey
  h2
    color white

.tables
  td:first-child
    width 40%
    border-right $table-border
    padding-right 25px
    border-right 1px solid #DDD
    +below(3)
      width 100%
      font-weight bold
      border-right 0
      background $ll-gray !important
  td
    position relative
  td:last-child
    padding-right 80px
    +below(3)
      border-top 0
  .table:not(.not-founds) td:last-child
    +below(3)
      margin-bottom 20px
  .panel-default
    border-top 3px solid $secondary

.location-list-wrap
.location-list
  margin-bottom 5px

.references
  h2
    font-size 16px
    margin 0
    display inline-block
  .date
    margin 0

.ref-link
  span
    padding-right 5px
  &:hover
    text-decoration none

@import 'comments.import'

@media (max-width: 1200px)
  .main-facts
    &:last-of-type
      margin-bottom 30px

@media (max-width: 768px)
  .events
    .event-head
      h1
        font-size 20px
      .minor
        font-size 1.2em
        margin .3em 0
      h3
        font-size 1.1em

    table
    thead
    tbody
    th
    td
    tr
      display block

    .event
      padding-left 50px
      padding-right 50px

    .event .table td:first-child
    td:first-child
      width 100%

    thead tr
      position absolute
      top -9999px
      left -9999px

    tr
      border: 0

    td
      border none
      border-bottom 1px solid #eee
      position relative
      padding-left 50%

    .table-striped > tbody > tr:nth-child(odd) > td
    .table-striped > tbody > tr:nth-child(odd) > th
      background none

    .tables td:first-child
      width 100%
      font-weight bold
      border-right 0
      background $ll-gray !important

    .tables td:last-child
      border-top 0

    .tables .table:not(.not-founds) td:last-child
      margin-bottom 20px

    .main-facts
      border-top 0
      tr
      td
        border 0 !important
      th
      td
      th:first-child
      td:first-child
      th:last-child
      td:last-child
        width 100%
        text-align left
      td
        padding 0 0 3px 0 !important
        margin-bottom 20px
        &::before
          font-size 18px
          content attr(data-header)
          font-weight bold
          display block
          border-bottom $table-border
          width 100%
          margin-bottom 15px


.abstract
  white-space pre-wrap

.shareLink input[type="text"]
  cursor text

.tab-form
  background-color $primary-l-light
  padding 15px 50px
  border 1px solid lighten($m-gray, 70%)
  input.form-control
  select.form-control
  .input-group-addon
    border-color $primary
  .table-filter .input-group-addon
    background-color white
    color $primary
    &:before
      content "\f002"
      font-family FontAwesome

.tab-pane .col-md-6
  padding 0

.disease-separator
  border-top 1px solid #DDD
  margin 10px 0

.remove-row::before
.edit-row::before
.open-row::before
.details-row::before
.open-row-right::before
  font-family FontAwesome

.remove-row::before
  content "\f014"

.edit-row::before
  content "\f044"

.open-row::before
  content "\f107"

.details-row::before
  content "\f105"

.open-row-right::before
  content "\f054"

.details-open
  background-color $secondary-light
  .open-row::before
    content "\f106"

.reactive-table tr.tr-details
  cursor default

.tr-detail-container
  padding 0 50px
  ul
    margin-bottom 0

.annotation-text
  color red
.annotation
  text-decoration underline
  cursor pointer
.annotation.accepted
  color green
.suggested-incidents
  width 800px
  .modal-body
    height 500px
    overflow-y scroll
.annotated-content
  white-space pre-wrap
.snippet
  max-height 250px
  overflow-y scroll
.warn
  background-color yellow

td.col-md-6.countCell.countCellLeft.text-center
td.col-md-6.countCell.text-center
  float left

.event-sources-detail
  color #95989A
  font-size 12px
  h2, h3
    color #95989A
  h2
    font-size 17px
    margin 20px 0 10px 0
  h3
    font-size 14px
  .event-source-info
    font-style italic
    border-top 1px #F2F2F2 solid
    border-bottom 1px #F2F2F2 solid
    div
      padding 4px 12px
    & div + div
      border-left 1px #F5F5F5 solid
  .event-source-summary .col-lg-6 + .col-lg-6
    border-left 1px #D5D5D5 solid
  a
    color #C6C6C6
  .event-source-summary
    div
      padding 12px
    ul
      list-style none
      margin-top 10px
      padding 0
      li
        color #95989A
        padding 4px 0
