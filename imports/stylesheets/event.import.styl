$max-event-details-width = $max-ui-width+300

.event
  .table
    border 0
    thead
    tbody
      tr
        th
        td
          &:first-of-type
            padding-left $page-padding-small-screen
            +above(3)
              padding-left $page-padding
    thead
      tr
        th
          border-color $border-primary-light
    tr
      &:not(.details)
        &:hover
          background $border-primary-light
    td
      &:first-child
        +below(3)
          width 100%
      &.title
        max-width 200px
        text-overflow ellipsis
        white-space nowrap
        overflow hidden
  section
    padding-top 0
    padding-bottom 0
    margin-bottom 4em
    border-bottom 1px solid $border-primary
    &:first-of-type
      border 0
    &:nth-of-type(2)
      margin-bottom 0
      border-color $primary
    .heading
      border-bottom 1px solid $border-primary
      padding-bottom 1em
      padding-top 1em
      background $border-primary-light
    h2
      font-size 2em
      font-weight 400
      text-transform uppercase
  .reactive-table-options
    display none

.event--basic-info
  margin 2em 0 0 0
  padding-top 2em
  +above(4)
    margin-right $page-padding*-1

.event--details
.event--metadata
  min-width 50%

.event--details
  margin-right 5%

.event--metadata
  flex-direction column

.event--metadata--counts
.event--metadata--secondary-content
  +above(4)
    padding-right $page-padding

.event--metadata--counts
  border-bottom 1px solid $secondary
  flex-direction row
  +between(4, $max-ui-width)
    flex-direction column
  +above($max-event-details-width)
    flex-direction row
  .count
    display flex
    flex-direction column
    align-items center
    border-right 1px solid lighten($secondary, 40%)
    font-weight 800
    text-align center
    padding 1em
    &:last-of-type
      border-right 0
    h4
      font-size 1.25em
      font-weight 300
      text-transform uppercase
      color $primary
      +above(3)
        font-size 1.5em
    span
      font-size 3.5em
      color $primary
      line-height 1

.event--metadata--secondary-content
  flex-grow 0
  flex-direction column
  align-items stretch
  +between(3,4)
    flex-direction row
    align-items center
    justify-content space-between
  +between(4, $max-event-details-width)
    align-items center
    flex-direction column
  +above($max-event-details-width)
    flex-direction row
  +between(3,4)
    margin-top 1em
  .secondary-content
    font-size .8em
    display flex
    align-items center
    text-align center
    margin-bottom .75em
    &:first-of-type
      margin-top 1.2em
    &:last-of-type
      margin-top 1.5em
    &
    &:first-of-type
    &:last-of-type
      +at(3)
        margin 0
      +above($max-event-details-width)
        margin 0
    +above($max-event-details-width)
      padding 1em 1.5em
      text-align left
      margin-bottom 0
    +above($max-event-details-width)
      border-right 1px solid lighten($secondary, 40%)
    &:last-of-type
      border 0
    p
      margin-bottom 0
  .btn
    font-size .95em
    border-color lighten($primary, 10%)
    color $primary
    padding .5em 1.5em
    min-width 140px
    .fa
      margin-right .5em
    &.copied
      &
      &:hover
        background lighten($positive, 20%)
        border-color darken($positive, 10%)
    &:hover
    &:focus
      background $primary-l-light
    &:active
      background darken($primary-light, 10%)
      color $primary

.fact-sheet-wrap
  padding 20px 0 0 0
  background $secondary-light
  padding-bottom 20px

.event-name-wrap
  display flex
  align-items flex-start
  margin-bottom .25em

.event-name
  margin 0
  font-size 2.25em
  color $highlight
  font-weight 600

.edit-event-details
  margin-left 10px
  cursor pointer
  font-size 1.25em
  color $m-gray
  &:hover
    color $primary

.disease-name
  span
    font-size 1.5em
    color $primary
    &.not-available
      font-size 1em

.summary
  line-height 1.75em

.summary
.disease-name
  .not-available
    color $m-gray
    font-style italic
  .fa
    font-size 95%
  &.shift-up
    margin-top -10px

.delete-confirmation
  text-align center
  padding-top 2em
  padding-bottom 3.5em
  p
    &:first-of-type
      margin .5em 0 .2em 0
      font-size 125%
    &:last-of-type
      font-style italic
      margin-bottom 2em
  i
    color lighten($delete, 20%)
    font-size 5em
  .other-actions
    margin-top 1em
    .btn:first-of-type
      margin-right .5em

.event-head
  .minor
    font-size 20px
    +below(3)
      font-size 1.2em
      margin .3em 0
  h1
    +below(3)
      font-size 20px
  h2
    margin 5px 0 5px 0
    color #666
    font-size 18px
  h3
    font-size 14px
    +below(3)
      font-size 1.1em

.disease
  h3
    display inline-block
    margin 5px 5px 10px 0

.panel-heading
  background lightslategrey
  h2
    color white

.tables
  td:first-child
    width 40%
    border-right $table-border
    padding-right 25px
    border-right 1px solid #DDD
    +below(3)
      width 100%
      font-weight bold
      border-right 0
      background $ll-gray !important
  td
    position relative
  td:last-child
    padding-right 80px
    +below(3)
      border-top 0
  .table:not(.not-founds) td:last-child
    +below(3)
      margin-bottom 20px
  .panel-default
    border-top 3px solid $secondary


.location-list-wrap
.location-list
  margin-bottom 5px

.references
  h2
    font-size 16px
    margin 0
    display inline-block
  .date
    margin 0

.ref-link
  span
    padding-right 5px
  &:hover
    text-decoration none

@media (max-width: 1200px)
  .main-facts
    &:last-of-type
      margin-bottom 30px

@media (max-width: 768px)
  .events
    .event-head
      h1
        font-size 20px
      .minor
        font-size 1.2em
        margin .3em 0
      h3
        font-size 1.1em

    table
    thead
    tbody
    th
    td
    tr
      display block

    .event
      padding-left 50px
      padding-right 50px

    .event .table td:first-child
    td:first-child
      width 100%

    thead tr
      position absolute
      top -9999px
      left -9999px

    tr
      border: 0

    td
      border none
      border-bottom 1px solid #eee
      position relative
      padding-left 50%

    .table-striped > tbody > tr:nth-child(odd) > td
    .table-striped > tbody > tr:nth-child(odd) > th
      background none

    .tables td:first-child
      width 100%
      font-weight bold
      border-right 0
      background $ll-gray !important

    .tables td:last-child
      border-top 0

    .tables .table:not(.not-founds) td:last-child
      margin-bottom 20px

    .main-facts
      border-top 0
      tr
      td
        border 0 !important
      th
      td
      th:first-child
      td:first-child
      th:last-child
      td:last-child
        width 100%
        text-align left
      td
        padding 0 0 3px 0 !important
        margin-bottom 20px
        &::before
          font-size 18px
          content attr(data-header)
          font-weight bold
          display block
          border-bottom $table-border
          width 100%
          margin-bottom 15px

.abstract
  white-space pre-wrap

.shareLink input[type="text"]
  cursor text

.tab-form
  display flex
  align-items center
  padding 15px 15px 15px $page-padding-small-screen
  border-bottom 2px solid $border-primary-light
  +above(3)
    padding 15px 15px 15px $page-padding
  input
    max-width 50%
    border-left 0
    box-shadow none
  input.form-control
  select.form-control
  .input-group-addon
    border-color $border-primary
  .table-filter
    .input-group-addon
      background-color white
      color lighten($primary, 20%)
      padding-right 0
      &:before
        content "\f002"
        font-family FontAwesome
  .btn
    background white
    text-transform uppercase
    font-weight 200
    font-size 1.2em
    &:hover
      border-color $primary-dark
      background darken($primary-l-light, 5%)

.tab-content
  .table
    tr
      &:not(.details)
        cursor pointer
      &:hover
        .open-row
          &:after
            transform scale(1.3)
    .open-row
      max-width 1em
      padding-right 1em
      text-align right
      &:after
        font-family FontAwesome
        content '\f137'
        color $border-primary
    .details-open
      .open-row
        &:after
          content '\f13a'
          color $primary

.details-open
  background-color $selected
  position relative

.details-container
  padding 0 50px
  ul
    margin-bottom 0

.annotation-text
  color red

.annotation
  text-decoration underline
  cursor pointer

.annotation.accepted
  color green

.suggested-incidents
  width 800px
  .modal-body
    height 500px
    overflow-y scroll

.annotated-content
  white-space pre-wrap

.snippet
  max-height 250px
  overflow-y scroll

.warn
  background-color yellow

.event-sources-detail
  h4
  h5
    color $primary
  h4
    font-size 1.5em
    margin 0
    &.make-selection
      text-align center
      padding 2em
      font-weight 400
      font-size 1.5em
      color lighten($m-gray, 20%)
  h5
    margin 0 0 .75em 0
    font-size 1.2em
  .event-sources-detail--header
    padding 1.25em
  .event-source-info
    margin 0
    font-style italic
    border-top 1px solid $border-primary-light
    border-bottom 1px solid $border-primary-light
    li
      padding .75em 2em
      border-right 1px solid $border-primary-light
      &:first-of-type
        padding 0
      &:last-of-type
        border 0
  a
    display block
    flex 1
    padding .75em 1.8em .75em 2em
    color darken($border-primary, 20%)
    text-align center
    &:hover
      background $border-primary-light
  .event-source-summary
    ul
      margin 0
      padding 0
      font-size .9em
      color lighten($body-text, 30%)
      li
        padding 0 0 1em 0
  .event-source-summary--item
    border-right 1px solid $border-primary-light
    padding 1.5em 1.25em
    min-width 20%
    &:last-of-type
      margin 0
      border 0


#suggested-articles
  list-style none
  margin 0
  padding 7px 0 0 0
  a
    color $blue
