#add-incident
  hr
    margin 0
    margin-top 1em
    border-color lightgray
  .tab-content
    clear both
    @extend .modal-block
    border-top 0
  input
    &[type=number]
      max-width 200px

  .form-group
    &.incident--dates
      margin-right -35px
      margin-left -35px
      margin-top 20px
      margin-bottom 15px
    &.check-buttons
      &.has-error
        background lighten($danger, 95%)
        border-top 1px solid lighten($danger, 70%)
        border-bottom 1px solid lighten($danger, 70%)

  .container-flex, .control-label
    margin-top 10px

  .note
    float right
    color gray
    margin-left 10px
    font-size .9em

.other-metadata
  ul
    margin-right 1em
    padding-right 1em
    border-right 1px solid $border-primary
    &:last-of-type
      border 0

.incident--dates
  margin-left -35px
  margin-right -35px
  padding 0 15px

