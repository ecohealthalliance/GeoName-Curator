@import 'incidentForm.import'

.annotation-text
  color red
  &.location
    color green
  &.date
    color blue

.annotation
  text-decoration underline
  cursor pointer

.annotation.accepted
  color green

.suggested-incidents
  margin 30px
  width calc(100% - 60px)
  +above(3)
    width 65%
    max-width 800px
    margin 30px auto
  .modal-content
    display flex
    flex-direction column
    height calc(100vh - 60px)
    min-height 400px
  .modal-body
    padding 0
    position relative
    gradientTopAndBottom()
    flex 1
  .modal-footer
    margin-top auto

  .annotation-count
    display block
    color $primary
    font-size 1em
    text-decoration none
    margin-top .5em

  .btn[data-dismiss]
    display none
    +above(3)
      display inline-block

.suggested-incidents-wrapper
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  padding 25px
  overflow-y scroll

.annotated-content
  white-space pre-wrap

.snippet
  max-height 250px
  overflow-y scroll

.warn
  background-color yellow
