@import 'mapFilters.import'

.event-map-wrapper
  position absolute
  left 0
  right 0
  top $mobile-header-height
  bottom 0
  margin auto
  background-color $map-background
  .leaflet-top,
  .leaflet-left
    z-index 90
  +above(4)
    top $header-height

#event-map
  full-width()
  left $map-menu-width-small
  width $map-width-small
  min-width $map-menu-width-small
  +below(2)
    top $mobile-header-height
    bottom $mobile-footer-height
    .leaflet-control-attribution
      font-size 5px
  +below(3)
    top $mobile-header-height
  +above(4)
    left $map-menu-width-large
    width $map-width-large
  +above($wide-ui-width)
    left $map-menu-width-max
    width $map-width-max

.map-menu
  position absolute
  top 0
  bottom 0
  width 20%
  width $map-menu-width-small
  background white
  z-index 100
  overflow-x scroll
  +above(4)
    width $map-menu-width-large
  +above($wide-ui-width)
    width $map-menu-width-max

.map-event-list
  border 0

.toggle-calendar-state
  font-size 1.75em
  cursor pointer
  margin-right 1em
  color $primary
  &.showing
    color darken($positive, 30%)
  &:hover
  &:focus
    color $link-color
    noBootstrapFocus()

.map-event-list--item
  padding .65em 2.5em .65em $page-padding
  border-left 0
  border-right 0
  background none
  cursor pointer
  &:hover
    background $ll-gray
  .name
    font-weight 600
  .date
    display block
    font-style italic
    font-size 90%
  &.selected
    background $selected
  &.selected .circle::before
  .circle
    position absolute
    top 50%
    transform translate(0, -50%)
    right 1em
    border-radius 50%
    height 1.5em
    width 1.5em
  &.selected
    .circle
      &::before
        left 50%
        transform translate(-50%, -50%)
        height .5em
        width .5em
        content ''
        background white

.map-event-list--nav
  display flex
  align-items center
  > div
    padding .751em
    cursor pointer
    font-size 2em
    color $primary
    &:focus
    &:hover
      color $link-color
    &:focus
      noBootstrapFocus()
  .disabled
    cursor default
    &
    &:hover
      color $ld-gray
    &:focus
      color lighten(desaturate($link-color, 70%), 20%)

  .deselect-all
    margin-right 1em
    margin-left auto
    color darken($l-gray, 20%)
    &.active
      cursor pointer
      color $primary-dark
      font-weight 400
      &:hover
        color darken($secondary-dark, 20%)

.date-options
  margin 1em 0
  display flex
  align-items center
  justify-content center
  flex-direction row
  button
    padding .5em 2em
    margin-right 1em
    +above(5)
      &:first-of-type
        padding-left 4em
        padding-right 4em
    &:last-of-type
      margin 0
