.color-legend
  margin-left auto
  margin-bottom 0
  li
    margin-right 1em
    align-items center
    justify-content flex-end
    display flex
    font-size .9em
    text-transform capitalize
    &::before
      border-radius 100%
      content ''
      margin-right .35em
      width 1.25em
      height 1.25em
      display block

for $type, $color in $incident-type-colors
  &.color-legend--{$type}
    &:hover
    &::before
      background $color
