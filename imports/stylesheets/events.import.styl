#proMedIFrame
  width 100%
  height 600px

.user-events
  .featured-table
    position relative
    background white
    .lastModifiedDate
    .lastIncidentDate
      font-size .9em
  .loading
    position absolute
    left 50%
    top 3em
    transform translate(-50%, 0)
    z-index -1
    &::before
      font-size 4em
      line-height 1
    &::after
      content 'Loading'
      text-transform uppercase
      margin-top .5em
      display block

#user-events-table
  +below(2)
    padding 0
    margin-right -15px
    margin-left -15px
    max-width calc(100%  +30px)
    width calc(100%  +30px)
    thead
    tbody
    th
    td
    tr
      +below(2)
        display block
    thead
      +below(2)
        display none
    > tbody
      > tr
        margin-bottom 1em
        > td
          border 0
          padding-left 30px
          padding-right 30px
          &:first-of-type
            font-weight 600
            border-bottom 1px solid $border-primary
            background $border-primary-light
            padding-top .5em
            padding-bottom .5em
            font-size 1.25em
          span
            &::before
              display block
              content attr(data-heading)
              font-weight 600

  &.table-striped > tbody > tr:nth-child(odd) > td
  &.table-striped > tbody > tr:nth-child(odd) > th
    +below(3)
      background none
