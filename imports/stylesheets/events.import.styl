.events
  table
  thead
  tbody
  th
  td
  tr
    +below(3)
      display block
  thead
    tr
      +below(3)
        position absolute
        top -9999px
        left -9999px
        border 0

    td
      +below(3)
        border none
        border-bottom 1px solid #eee
        position relative
        padding-left 50%

  &.table-striped > tbody > tr:nth-child(odd) > td
  &.table-striped > tbody > tr:nth-child(odd) > th
    +below(3)
      background none

#proMedIFrame
  width 100%
  height 600px

.user-events
  .featured-table
    position relative
    background white
    .lastModifiedDate
      font-size .8em
  .loading
    position absolute
    left 50%
    top 3em
    transform translate(-50%, 0)
    z-index -1
    &::before
      font-size 4em
      line-height 1
    &::after
      content 'Loading'
      text-transform uppercase
      margin-top .5em
      display block
