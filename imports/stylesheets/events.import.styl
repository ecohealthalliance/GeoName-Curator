.events
  table
  thead
  tbody
  th
  td
  tr
    +below(3)
      display block

  thead tr
    +below(3)
      position absolute
      top -9999px
      left -9999px

    tr
      +below(3)
        border 0

    td
      +below(3)
        border none
        border-bottom 1px solid #eee
        position relative
        padding-left 50%

    .table-striped > tbody > tr:nth-child(odd) > td
    .table-striped > tbody > tr:nth-child(odd) > th
      +below(3)
        background none

.dropdown-toggle-nav
  font-size 0
  &::before,
  &::after
    vAlign()

.dropdown-menu > .active > a
.dropdown-menu > .active > a:hover
.dropdown-menu > .active
  background-color $secondary

.dropdown-menu
  max-width 300px
.dropdown-menu-right
  left 0 !important
  right 0
.dropdown-menu.nav-dd
  padding 0

#proMedIFrame
  width 100%
  height 600px

.count-cell
  height 100px
  border-bottom 1px solid $secondary
  font-size 36px

.count-cell-left
  border-right 1px solid $secondary

.count-cell-value
  color $primary
  font-weight bold

.count-cell-title
  color $primary
  font-size .6em
  font-weight 300
  margin-bottom 20px
  text-transform uppercase

td.col-md-4.count-cell.text-center
  float left

.gi-cell-center
  border-left 1px solid $secondary

.gi
  padding 10px
  font-size .75em
  color $m-gray
  font-weight 300
  span
    font-weight 400

.copy-link
  font-size 1.1em
  font-weight 400
  padding-top .25em
  padding-bottom .25em
