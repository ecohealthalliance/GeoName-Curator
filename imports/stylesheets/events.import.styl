
.reactive-table
  padding-left 0
  padding-right 0
  border-radius 5px
  overflow hidden
  border $table-border
  tbody tr
    cursor pointer
.reactive-table-columns-dropdown
  button
    text-shadow none
    &:hover
      @extend .white-shadow
  float left !important
  width auto
  padding 0
  a
    position relative
  label
    white-space initial
    padding-left 25px
    margin 0
    input
      position absolute
      left 15px

.reactive-table-columns-dropdown .dropdown-toggle
  &::before,
  &::after
    vAlign()
  &::before
    @extend .font-awesome
    content '\f0db'
    padding-right 5px
    line-height 0
    margin-top -3px

.dropdown-toggle-nav
  font-size 0
  &::before,
  &::after
    vAlign()

.dropdown-menu > .active > a
.dropdown-menu > .active > a:hover
.dropdown-menu > .active
  background-color $secondary

.reactive-table-options
  float none
  width 100%
  padding 0
  .dropdown-menu > li > a
    padding 4px 10px

.dropdown-menu
  max-width 300px
.dropdown-menu-right
  left 0 !important
  right 0
.dropdown-menu.nav-dd
  padding 0

.rows-per-page,
.page-number
  margin-right 20px
  span
    font-weight normal
    padding 0 1px
  .page-number-count,
  .rows-per-page-count
    font-weight bold
  input
    text-align center

.reactive-table-navigation .previous-page
.reactive-table-navigation .next-page
  font-size 150%
  line-height 0

@media (min-width: 768px)
  .reactive-table-filter
    width 40%
    padding 0

@media (max-width: 768px)
  .reactive-table
    td
      display none
      border-top 0 !important
      &:first-child
        display block
        padding-top 20px
        padding-bottom 20px
      &:hover,
      &:focus
        background $l-gray
    tr:last-child td:first-child
      border 0
  .reactive-table-filter
    padding 10px 0 10px 0
  .reactive-table-options
    margin 0
    padding 0
    .dropdown-toggle
      display none
  .reactive-table-input
    padding 20px 10px
  .next-page
  .page-number
    width 100%
    float none
    font-size 24px
    label
      display none
    .previous-page,
    .next-page
      display block
      width 45%
      float left
      background $secondary
      text-align center
      padding 10px
      color white
      border-radius 3px
      cursor pointer
      &:focus,
      &:hover
        background darken($secondary, 15%)
        border $primary
        color white

    .next-page
      float right

  .rows-per-page
    display none

#proMedIFrame
  width 100%
  height 600px

.count-cell
  height 100px
  border-bottom 1px solid $secondary
  font-size 36px

.count-cell-left
  border-right 1px solid $secondary

.count-cell-value
  color $primary
  font-weight bold

.count-cell-title
  color $primary
  font-size .6em
  font-weight 300
  margin-bottom 20px
  text-transform uppercase

td.col-md-4.count-cell.text-center
  float left

.gi-cell-center
  border-left 1px solid $secondary

.gi
  padding 10px
  font-size .75em
  color $m-gray
  font-weight 300
  span
    font-weight 400

.copy-link
  font-size 1.1em
  font-weight 400
  padding-top .25em
  padding-bottom .25em
