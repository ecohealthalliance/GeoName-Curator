.about-intro
  padding-top 20px
  padding-bottom 30px
  h1
    font-size 40px
    margin 0 auto
    bg('/images/eidr-connect-logo', 450px, 212px, 'svg')
    +below(3)
      font-size 35px
      changeBGSize(250px,173px)
    +below(4)
      margin-left auto
      margin-right auto
  p
    padding-top 30px
    width 75%
    margin 20px auto
    text-align center
    +below(3)
      width 100%
      text-align center
      padding-top 15px
    +below(4)
      padding-top 40px

.exploring
  @extend .centered
  margin 30px 0
  span
    padding-bottom 10px
    &::before
      display block
      margin-top 5px
      padding-right 5px
      font-size 80px
      font-weight normal
      color $blue
  p
    margin-bottom 20px
  img
    max-width 100%
    border 1px solid #CCC
    border-radius 3px
  li
    padding-left 30px
    padding-right 30px
    margin-bottom 20px
    +below(3)
      padding-left 0
      padding-right 0
    +between(3,4)
      margin-bottom 30px
      padding-right 0
      &:first-of-type
        padding-right 45px
      &:last-of-type
        clear both
        margin 0 auto
        float none

.method
  margin-bottom 20px
  padding-left 30px
  padding-right 30px
  p
    text-indent 20px
  +below(3)
    padding-left 15px
    padding-right 15px

.funding
  p
    width 75%
    margin 0 auto 20px auto
    +below(3)
      width 100%
