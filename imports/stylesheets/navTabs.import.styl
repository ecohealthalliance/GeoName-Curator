.tabs-wrapper
  border-bottom 2px solid $primary

.tabs
  position relative
  display flex
  align-items stretch
  margin-bottom 0
  width 100%
  padding 0
  +above(2)
    flex-direction row
  +above(3)
    margin-top 40px
  +above(5)
    width 65%
    max-width $max-ui-width
    justify-content center
    margin-right auto
    margin-left auto

  > li
    display flex
    flex 1
    justify-content center
    align-items center
    letter-spacing $letter-spacing
    border 0
    border-radius 0
    +above(4)
      margin 0 .5em

.tabs > li
  &:hover
    background-color darken($primary-light, 3%)
  > a
    flex 1
    width 100%
    padding-top .75em
    padding-bottom .75em
    font-size 1.25em
    text-align center
    display block
    text-transform uppercase
    text-decoration none
    border 1px solid $border-primary
    border-bottom 0
    +above(2)
      font-size 1.25em
    +above(4)
      border-top-left-radius 4px
      border-top-right-radius 4px

.tabs > li > a
.tabs > li > a:hover
.tabs > li > a:focus
  color $primary

.tabs > li
.tabs > li.active
  > a
    &:focus
      background $focus-secondary
      border-color darken($secondary, 20%)
      color $primary-dark

.tabs > li.active
  > a
    color white
    cursor default
    &
    &:hover
      border-color $primary
      background-color $primary
    &:active
      color white

.tabs-secondary
  border-bottom 1px solid $border-primary
  > li
    position relative
    > a
      font-size 1em
      padding-top .35em
      padding-bottom .35em
    &.active
      > a
        &
        &:focus
        &:hover
        &:active
          background $block-BG
          border-color $border-primary
    &.with-info-tooltip
      &:after
        position absolute
        top .1em
        right .5em
        font-size .8em

.tabs-traditional
  margin 0
  width 100%
  padding 0 20px
  justify-content center
  +above(2)
    justify-content flex-start
  > li
    flex 1
    white-space nowrap
    background white
    margin-right .25em
    +above(2)
      flex 0 0 auto
    &:first-of-type
      border-top-left-radius 4px
    &:last-of-type
      border-top-right-radius 4px
      margin-right 0
    > a
      text-transform capitalize
      padding-left 2em
      padding-right 2em
      font-weight 600
      padding-top 1.2em
      padding-bottom 1.2em
      +above(2)
        padding-top .75em
        padding-bottom .75em
    &.active
      background $block-BG
      border-color $border-primary
      margin-bottom -1px
      &:hover
        background @background
        border-color @border-color
      > a
        color $primary

.tabs-modal-header
  > li
    background none
    &:hover
      background darken($border-primary-light, 5%)
    > a
      color $primary
      font-weight normal
    &.active
      background $border-primary-light
      border-color darken($border-primary, 10%)
      &:hover
        background @background
        border-color @border-color
      > a
        font-weight 600
        color $primary-dark
