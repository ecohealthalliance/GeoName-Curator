.tabs-wrapper
  border-bottom 2px solid $primary
  background $border-primary-light

.tabs
  position relative
  display flex
  align-items stretch
  margin-bottom 0
  width 100%
  padding 0
  +above(2)
    flex-direction row
  +above(3)
    margin-top 40px
  +above(5)
    width 65%
    max-width $max-ui-width
    justify-content center
    margin-right auto
    margin-left auto

  > li
    display flex
    flex 1
    justify-content center
    align-items center
    letter-spacing $letter-spacing
    background-color lighten($border-primary, 40%)
    border 1px solid $border-primary
    border-bottom 0
    +above(4)
      margin 0 .5em

.tabs > li > a
  flex 1

.tabs > li > a
.tabs > li > a:hover
.tabs > li > a:focus
.tabs > li > a:active
  padding .75em 1em
  border-bottom 0
  font-size 1.25em
  text-align center
  color $primary
  text-transform uppercase
  display block
  text-decoration none
  +above(2)
    font-size 1.25em
  +above(4)
    border-top-left-radius 4px
    border-top-right-radius 4px

.tabs > li:hover
  background-color darken($primary-light, 3%)

.tabs > li.active
.tabs > li.active:hover
.tabs > li.active:focus
  border-color $primary
  background-color $primary

.tabs > li.active > a
  color white
  cursor default
