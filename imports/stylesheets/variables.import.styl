$primary = #345E7E
$primary-light = #EAEEF2
$primary-l-light = #F5F7F9
$primary-dark = darken($primary, 30%)
$secondary = #F7B297
$secondary-light = #FAF0EC
$secondary-l-light = lighten($secondary, 90%)
$secondary-dark = darken($secondary, 30%)
$highlight = #F07382
$highlight-primary = alpha(lighten($primary, 75%), 90%)
$highlight-yellow = #FFEBAA

$focus-primary = darken($primary-light, 20%)
$focus-secondary = lighten($secondary, 30%)

$ll-gray = #f9f9f9
$l-gray = #ebebeb
$ld-gray = darken($l-gray,10%)
$m-gray = #808080
$d-gray = #333

$body-text = $d-gray

$map-background = #CDD2D4

$positive = #A7DB7A
$warning = #EFAC56
$danger = $highlight
$delete = $danger

$border-primary = #C6D1DD
$border-primary-light = lighten($border-primary, 75%)
$border-primary-light = $border-primary-l = lighten($border-primary, 75%)
$border-primary-medium = $border-primary-m = darken($border-primary-l, 5%)
$border-secondary = lighten($secondary, 30%)
$border-btn = #95989A

$selected = $border-primary-light
$block-BG = lighten($border-primary-light, 50%)

$selection = $highlight-yellow

$tableRadius = 5px
$table-border = 1px solid #DDD

$header-height = 50px + 2 // 2px border
$mobile-header-height = 50px

$footer-height = 100px
$mobile-footer-height = 65px

$page-padding = 25px
$page-padding-small-screen = 15px

$link-color = #AF2636
$link-color-hover = $primary-dark

$wide-ui-width = 2000px
$map-menu-width-small = 300px
$map-menu-width-large = 25%
$map-menu-width-max = 500px
$map-width-small = 'calc(100% - %s)' % $map-menu-width-small
$map-width-max = 'calc(100% - %s)' % $map-menu-width-max
$map-width-large = 100 - $map-menu-width-large

$max-ui-width = 1000px

$curator-pane-width = 50%
$curator-pane-head-height = 50px

// Z-index layers
$cosmos-layer = 3000
$modal-layer = 2000
$top-layer = 1000
$mid-layer = 100
$bottom-layer = 10
$page-layer = 0

$body-font = 'Open Sans'

$incident-type-colors = {
  'location': lighten($primary, 80%)
  'date': lighten($positive, 50%)
  'case': lighten($highlight, 60%)
  'uncertain': darken($l-gray, 5%)
  'disease': #F7DEB9
}
$incident-type-colors.accepted = $incident-type-colors.date
$incident-type-colors.rejected = $incident-type-colors.case

// Break points
$break-point--curator-inbox = 1000px
$break-point--curator-inbox--x-wide = 1500px
