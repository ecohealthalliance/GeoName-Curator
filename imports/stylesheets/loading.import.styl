.loading
  margin 30px 0
  text-align center
  &.centered
    position absolute
    margin 0
    top 50%
    left 50%
    transform translate(-50%, -50%)
  img
    height 80px
    width 80px
  &.small
    img
      height 40px
      width 40px
    p
      font-size 1em
  p
    text-align center
    text-transform uppercase
    color $primary
    font-size 1.1em
    font-weight 300
    margin 10px 0 0 0
