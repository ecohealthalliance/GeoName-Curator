.loading
  margin-top 30px
  text-align center
  &.centered
    position absolute
    top 2em
    top 50%
    left 50%
    transform translate(-50%, -50%)
  img
    height 80px
    width 80px
  &.small
    img
      height 40px
      width 40px
    p
      font-size 1em
  p
    text-align center
    text-transform uppercase
    color $primary
    font-size 1.1em
    font-weight 300
    margin 10px 0 0 0
